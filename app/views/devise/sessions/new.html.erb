<div class="relative min-h-screen overflow-hidden">
  <div class="absolute inset-0 bg-cover bg-center opacity-60" style="background-image: url(<%= asset_path('pc_back_lunch.webp') %>);"></div>

  <div class="relative z-10 flex min-h-screen items-center justify-center px-4 py-10">
    <div class="w-full max-w-xl">
      <div class="card bg-base-100/95 shadow-2xl border border-base-200">
        <div class="card-body space-y-6">
          <header class="space-y-1">
            <p class="text-sm text-neutral/60">Welcome back♡</p>
            <h2 class="text-2xl font-black ">ログイン</h2>
          </header>

          <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <div class="form-control">
              <%= f.label :name, class: "label font-semibold text-sm text-neutral" %>
              <%= f.text_field :name, autofocus: true, autocomplete: "name", class: "input input-bordered w-full" %>
            </div>

            <div class="form-control">
              <%= f.label :password, class: "label font-semibold text-sm text-neutral" %>
              <%= f.password_field :password, autocomplete: "current-password", class: "input input-bordered w-full" %>
            </div>

            <!--⭐️実装予定⭐️ <% if devise_mapping.rememberable? %>
              <label class="label cursor-pointer justify-start gap-2 text-sm text-neutral">
                <%= f.check_box :remember_me, class: "checkbox checkbox-sm" %>
                <span>ログイン状態を保持する</span>
              </label>
            <% end %> -->

            <div class="form-control pt-2">
              <%= f.submit "ログイン", class: "btn btn-secondary w-full" %>
            </div>
          <% end %>

          <div class="pt-2">
            <%= render "devise/shared/links" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
