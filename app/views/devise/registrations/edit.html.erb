<div class="relative min-h-screen overflow-hidden">
  <div class="absolute inset-0 bg-cover bg-center opacity-60" style="background-image: url(<%= asset_path('pc_back_lunch.webp') %>);"></div>

  <div class="relative z-10 flex min-h-screen items-center justify-center px-4 py-10">
    <div class="w-full max-w-2xl">
      <div class="card bg-base-100/95 shadow-2xl border border-base-200">
        <div class="card-body space-y-6">
          <header class="space-y-1">
            <p class="text-sm text-neutral/60">Profile settings</p>
            <h2 class="text-2xl font-black">Edit <%= resource_name.to_s.humanize %></h2>
          </header>

          <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
            <%= render "devise/shared/error_messages", resource: resource %>

            <div class="form-control">
              <%= f.label :email, class: "label font-semibold text-sm text-neutral" %>
              <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "input input-bordered w-full" %>
            </div>

            <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
              <div class="text-sm text-warning">Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
            <% end %>

            <div class="grid gap-4 md:grid-cols-2">
              <div class="form-control">
                <%= f.label :password, class: "label font-semibold text-sm text-neutral" %>
                <small class="text-[11px] text-neutral/60">変更しない場合は空欄のままにしてください</small>
                <%= f.password_field :password, autocomplete: "new-password", class: "input input-bordered w-full" %>
                <% if @minimum_password_length %>
                  <span class="text-[11px] text-neutral/60 mt-1">(<%= @minimum_password_length %> characters minimum)</span>
                <% end %>
              </div>

              <div class="form-control">
                <%= f.label :password_confirmation, class: "label font-semibold text-sm text-neutral" %>
                <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "input input-bordered w-full" %>
              </div>
            </div>

            <div class="form-control">
              <%= f.label :current_password, class: "label font-semibold text-sm text-neutral" %>
              <small class="text-[11px] text-neutral/60">変更を確定するため現在のパスワードが必要です</small>
              <%= f.password_field :current_password, autocomplete: "current-password", class: "input input-bordered w-full" %>
            </div>

            <div class="form-control pt-2">
              <%= f.submit "Update", class: "btn btn-primary w-full" %>
            </div>
          <% end %>

          <div class="divider">Or</div>

          <div class="space-y-3">
            <h3 class="text-lg font-semibold text-error">Cancel my account</h3>
            <div class="flex flex-wrap gap-3 items-center">
              <p class="text-sm text-neutral/70 m-0">Unhappy?</p>
              <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?", turbo_confirm: "Are you sure?" }, method: :delete, class: "btn btn-outline btn-error btn-sm" %>
              <%= link_to "Back", :back, class: "link link-neutral text-sm" %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
