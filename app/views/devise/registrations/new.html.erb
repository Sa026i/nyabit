<div class="relative min-h-screen overflow-hidden">
  <div class="absolute inset-0 bg-cover bg-center opacity-60" style="background-image: url(<%= asset_path('pc_back_lunch.webp') %>);"></div>

  <div class="relative z-10 flex min-h-screen items-center justify-center px-4 py-10">
    <div class="w-full max-w-xl">
      <div class="card bg-base-100/95 shadow-2xl border border-base-200">
        <div class="card-body space-y-6">
          <header class="space-y-1">
            <p class="text-sm text-neutral/60">Welcome to Nyabit❤︎</p>
            <h2 class="text-2xl font-black">新規登録</h2>
          </header>

          <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
            <%= render "devise/shared/error_messages", resource: resource %>

            <div class="form-control">
              <%= f.label :name, class: "label font-semibold text-sm text-neutral" %>
              <%= f.text_field :name, class: "input input-bordered w-full" %>
            </div>

            <div class="form-control">
              <%= f.label :email, class: "label font-semibold text-sm text-neutral" %>
              <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "input input-bordered w-full" %>
            </div>

            <div class="form-control">
              <%= f.label :password, class: "label font-semibold text-sm text-neutral" %>
              <div class="flex items-center justify-between text-[11px] text-neutral/60">
                <% if @minimum_password_length %>
                  <span>(<%= @minimum_password_length %> characters minimum)</span>
                <% end %>
              </div>
              <%= f.password_field :password, autocomplete: "new-password", class: "input input-bordered w-full" %>
            </div>

            <div class="form-control">
              <%= f.label :password_confirmation, class: "label font-semibold text-sm text-neutral" %>
              <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "input input-bordered w-full" %>
            </div>

            <div class="form-control pt-2">
              <%= f.submit "新規登録", class: "btn btn-secondary w-full" %>
            </div>
          <% end %>

          <div class="pt-2">
            <%= render "devise/shared/links" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
